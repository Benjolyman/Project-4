<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= champions.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .champion-header {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin-left: 24%;
            margin-top: 5%;
        }

        .champion-header img {
            margin-right: 20px;
        }

        .champion-header h1 {
            margin: 0;
            margin-right: 20px;
        }

        .create-build-btn {
            margin-left: 40%;
        }

        .build-card {
            margin-top: 0px;
            margin-bottom: 20px; 
            width: 100%;
            max-width: 600px; 
        }

        .card-body {
            width: 100%; 
            display: flex;
            justify-content: space-between; 
            align-items: center; 
        }

        .card-title {
            margin: 0; 
        }

        .btn-secondary {
            margin-left: auto; 
        }
        .btn-primary{
            margin-left: 30px;
        }
        .cards {
            margin-top: 50px;
        }
    </style>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>

    <div class="champion-header">
        <img src="<%= champions.imageUrl %>" width="50" height="50" alt="<%= champions.name %>">
        <h1><%= champions.name %></h1>
        <div class="create-build-btn">
            <a href="/champions/<%= champions._id %>/new" class="btn btn-primary">Create</a>
        </div>
    </div>

    <div class="d-flex flex-column align-items-center cards">
        <% champions.builds.forEach((build) => { %>
            <div class="card build-card">
                <div class="card-body">
                    <h5 class="card-title"><%= build.name %></h5>
                    <a href="/champions/<%= champions._id %>/<%= build._id %>" class="btn btn-secondary">View Build</a>
                </div>
            </div>
        <% }) %>
    </div>

</body>

</html>
